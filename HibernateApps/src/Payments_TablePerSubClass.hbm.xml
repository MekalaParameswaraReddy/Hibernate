<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.paramesh.mapping.inheritance.Payments" table="PAYMENTS"
		dynamic-update="true">
		<id name="paymentId">
			<!-- <generator class="assigned"></generator> -->
			<generator class="increment"></generator>
		</id>
		<property name="customerName" />
		<property name="paymentAmount" />

		<joined-subclass name="com.paramesh.mapping.inheritance.CashPayment"	table="CASH_PAYMENTS">
		<key column="paymentId"></key> 
			<property name="cashPaymentId"></property>
			<property name="personName"></property>
		</joined-subclass>

		<joined-subclass name="com.paramesh.mapping.inheritance.ChequePayment" table="CHEQUE_PAYMENTS">
			<key column="paymentId"></key> 
			<property name="chequePaymentId"></property>
			<property name="chequeType"></property>
			<property name="chequeHolderName"></property>
		</joined-subclass>
	</class>
	
</hibernate-mapping>